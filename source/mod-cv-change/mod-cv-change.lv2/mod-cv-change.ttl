@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix epp: <http://lv2plug.in/ns/ext/port-props#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/>.
@prefix modgui: <http://moddevices.com/ns/modgui#>.
@prefix mod: <http://moddevices.com/ns/mod#>.
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix atom: <http://lv2plug.in/ns/ext/atom#> .
@prefix midi: <http://lv2plug.in/ns/ext/midi#> .
@prefix urid: <http://lv2plug.in/ns/ext/urid#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<http://moddevices.com/plugins/mod-devel/mod-cv-change>
a lv2:Plugin, mod:ControlVoltagePlugin;

doap:name "CV Changed";
doap:license "GPL v2+";
doap:developer [
    foaf:name "Bram Giesen";
    foaf:homepage <>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

doap:maintainer [
    foaf:name "MOD";
    foaf:homepage <http://moddevices.com>;
    foaf:mbox <mailto:bram@moddevices.com>;
    ];

    lv2:minorVersion 1;
    lv2:microVersion 0;

rdfs:comment """
Plugin that outputs 5 volt for a givin time after the incomming signal has changed
""";

lv2:port
[
    a lv2:InputPort, lv2:CVPort;
    lv2:index 0;
    lv2:symbol "CVin1";
    lv2:name "CV Input1";
],
[
    a lv2:OutputPort, lv2:CVPort;
    lv2:index 1;
    lv2:symbol "CVout1";
    lv2:name "CV Output";
    lv2:minimum 0.0 ;
    lv2:maximum 5.0 ;
],
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "Mode" ;
    lv2:name "Mode" ;
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
    lv2:portProperty lv2:toggled;
],
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "HoldTimeShortMode" ;
    lv2:name "Hold Time Short" ;
    lv2:default 0.0 ;
    lv2:minimum 1.0 ;
    lv2:maximum 1000.0 ;
    units:unit units:ms ;
    lv2:portProperty mod:tempoRelatedDynamicScalePoints;
],
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "HoldTimeLong" ;
    lv2:name "HoldTimeLong" ;
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 60.0 ;
    units:unit units:s ;
    lv2:portProperty mod:tempoRelatedDynamicScalePoints;
],
[
    a lv2:InputPort ,
    lv2:ControlPort ;
    lv2:index 5 ;
    lv2:symbol "PluginEnabled" ;
    lv2:name "PluginEnabled" ;
    lv2:default 1.0 ;
    lv2:minimum 0.0 ;
    lv2:maximum 1.0 ;
    lv2:designation lv2:enabled;
    lv2:portProperty lv2:toggled;
]
.
